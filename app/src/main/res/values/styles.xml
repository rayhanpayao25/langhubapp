<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="RoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">90dp</item> <!-- Adjust the radius as needed -->
    </style>
    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/custom_button_background</item>
        <item name="android:textColor">#FFFFFF</item> <!-- Text color -->
    </style>

    <style name="ToolbarTitleText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ToolbarTitleStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#4A00E0</item>
        <item name="colorPrimaryDark">#3700B3</item>
        <item name="colorAccent">#8E2DE2</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>


    <!-- Custom button styles -->
    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Custom text button style -->
    <style name="AppTheme.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
