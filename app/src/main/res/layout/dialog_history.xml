<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/history_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent Quiz History"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/current_score_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Current Score"
        android:textSize="16sp"
        android:paddingBottom="16dp" />

    <!-- History Table (using a ScrollView and LinearLayout to display the history) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <!-- History Data will be dynamically added here -->

        </LinearLayout>
    </ScrollView>

    <!-- Close Button -->

</LinearLayout>
