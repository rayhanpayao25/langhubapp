<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white"
    android:elevation="10dp">

    <TextView
        android:id="@+id/dialogMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose an option"
        android:textSize="18sp"
        android:padding="10dp" />

    <!-- Button 1 with Circular Image (English) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/usa"
            android:background="@drawable/circular_image"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:contentDescription="English Flag"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/dialogOption1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English" />
    </LinearLayout>

    <!-- Button 2 with Circular Image (Chinese) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/china"
            android:background="@drawable/circular_image"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:contentDescription="Chinese Flag"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/dialogOption2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chinese" />
    </LinearLayout>

    <!-- Button 3 with Circular Image (Spanish) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/spain"
            android:background="@drawable/circular_image"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:contentDescription="Spanish Flag"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/dialogOption3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spanish" />
    </LinearLayout>

</LinearLayout>
